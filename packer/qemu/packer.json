{
  "_comment": "Build with `packer build golden-image.json`",
  "builders": [
    {
      "disk_compression": true,
      "disk_image": true,
      "disk_size": "{{user `disk_size`}}",
      "format": "{{ user `format` }}",
      "headless": "{{ user `headless` }}",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "output_directory": "output",
      "qemuargs": [
        [
          "-m",
          "{{ user `memory` }}"
        ],
        [
          "-smp",
          "cpus={{ user `cpus` }}"
        ],
        [
          "-cdrom",
          "{{ user `cloud_init_image` }}"
        ],
        [
          "-serial",
          "mon:stdio"
        ]
      ],
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_timeout": "2h",
      "ssh_username": "{{ user `ssh_username` }}",
      "boot_wait": "60s",
      "type": "qemu",
      "use_default_display": false,
      "vm_name": "{{user `build_name`}}.qcow2"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "sleep 10",
        "sudo unlink /bin/sh",
        "sudo ln -s /bin/bash /bin/sh"
      ],
      "type": "shell"
    },
    {
      "execute_command": "echo 'install ansible' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "scripts": [
        "scripts/install-ansible.sh"
      ],
      "type": "shell"
    },
    {
      "extra_arguments": [
        "--extra-vars \"{{user `ansible_common_vars`}} ansible_python_interpreter={{user `ansible_python_interpreter`}}\""
      ],
      "playbook_dir": "./ansible",
      "playbook_file": "./ansible/node.yml",
      "type": "ansible-local"
    },
    {
      "execute_command": "echo 'remove ansible' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "scripts": [
        "scripts/remove-ansible.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "accelerator": "kvm",
    "ansible_common_vars": "",
    "ansible_extra_vars": "",
    "cloud_init_image": "cloud-init/packer.init",
    "cpus": "2",
    "disk_size": "20480",
    "format": "qcow2",
    "headless": "true",
    "memory": "2048",
    "ssh_password": "builder",
    "ssh_port": "22"
  }
}

